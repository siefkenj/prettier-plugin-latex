{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*", "tests"],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/*.test.ts",
        "vite.config.ts"
    ]
}
